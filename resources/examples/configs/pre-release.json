{
  "name": "pre-release-config",
  "description": "Production deployment checklist with approval gates and comprehensive validation",
  "mode": "hive-mind",
  "topology": "hierarchical",
  "maxAgents": 8,
  "consensus": "raft",
  "roles": {
    "queen": {
      "type": "hierarchical-coordinator",
      "model": "opus",
      "responsibilities": ["release-coordination", "approval-management", "rollback-decisions"]
    },
    "leads": [
      {
        "type": "production-validator",
        "team": "validation",
        "model": "sonnet"
      },
      {
        "type": "security-manager",
        "team": "security",
        "model": "sonnet"
      }
    ],
    "workers": [
      {
        "type": "tester",
        "count": 2,
        "model": "sonnet"
      }
    ]
  },
  "memory": {
    "type": "agentdb",
    "namespace": "pre-release",
    "persistence": true,
    "hnsw": true
  },
  "intelligence": {
    "enableSona": true,
    "enableMoe": true,
    "enableHnsw": true,
    "modelRouting": true
  },
  "workers": [
    "audit",
    "benchmark",
    "document"
  ],
  "claims": {
    "enabled": true,
    "approvalRequired": ["production-validator", "security-manager"],
    "gates": [
      "security-audit",
      "performance-benchmark",
      "smoke-tests",
      "rollback-plan-verified"
    ]
  },
  "checklist": {
    "preDeployment": [
      "All tests passing",
      "Security audit complete",
      "Performance benchmarks met",
      "Documentation updated",
      "Rollback plan documented"
    ],
    "deployment": [
      "Database migrations reviewed",
      "Feature flags configured",
      "Monitoring alerts set",
      "Load balancer configured"
    ],
    "postDeployment": [
      "Smoke tests passing",
      "Error rates normal",
      "Performance metrics stable",
      "Stakeholders notified"
    ]
  },
  "cli_command": "npx claude-flow@alpha init wizard"
}
